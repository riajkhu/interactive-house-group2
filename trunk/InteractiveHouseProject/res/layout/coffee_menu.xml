<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coffeeBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/pcoffeeOff"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
       android:layout_marginTop="60dp"
        android:src="@drawable/coffeeoff"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/bcoffeeOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pcoffeeOff"
        android:layout_centerHorizontal="true"
        android:onClick="off"
        android:src="@drawable/buttonoff"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/pcoffeeOn"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/coffeeon"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/bcoffeeOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pcoffeeOn"
        android:layout_centerHorizontal="true"
        android:onClick="on"
        android:src="@drawable/buttonon"
        android:visibility="invisible" />

</RelativeLayout>