<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unitdev2project"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/appname"
        android:persistent="true"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name=".Splash"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MainMenu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginMenu"
            android:label="@string/title_activity_login_menu"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.LoginMenu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.Register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LightMenu"
            android:label="@string/title_activity_device_menu"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.DeviceMenu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="OptionMenu"
            android:label="@layout/option_menu"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.OptionMenu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="CoffeeMenu"
            android:label="@layout/coffee_menu"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.CoffeeMenu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="DoorMenu"
            android:label="@layout/door_menu"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.DoorMenu" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity 
            android:label="@layout/music_menu" 
            android:name="MusicMenu">
            
        </activity>
        <activity 
            android:label="@layout/lightcontrol_menu" 
            android:name=".LightControlMenu">
            <intent-filter>
                <action android:name="android.intent.action.LightControlMenu" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>